# Contributor: Valentin-Costel Haloiu <vially.ichb+aur@gmail.com>

pkgname=lime-git
pkgver=20131125
pkgrel=1
pkgdesc="An experimental Sublime Text clone"
arch=('i686' 'x86_64')
url="https://github.com/limetext/lime"
options=('!strip')
license=(BSD)
source=()
md5sums=()

_gitroot="https://github.com/limetext/lime.git"
_gitname="lime"

build() {
  mkdir -p "${srcdir}/src"
  cd "${srcdir}/src"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
      cd $_gitname && git pull origin
      msg "The local files are updated."
  else
      git clone --recursive $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  export GOPATH="${srcdir}"
  mkdir -p "${srcdir}/src/$_gitname/build2"
  cd "${srcdir}/src/$_gitname/build2"

  cmake ..
  make
}

check() {
  cd "${srcdir}/src/$_gitname/build2"
  make test
}

package() {
  source /etc/profile.d/go.sh
  mkdir -p "$pkgdir/$GOPATH"
  cp -Rv --preserve=timestamps ${srcdir}/{src,pkg} "$pkgdir/$GOPATH"

  # Package license (if available)
  for f in LICENSE COPYING LICENSE.* COPYING.*; do
    if [ -e "$srcdir/src/$_gitname/$f" ]; then
      install -Dm644 "$srcdir/src/$_gitname/$f" \
        "$pkgdir/usr/share/licenses/$pkgname/$f"
    fi
  done

  mkdir -p ${pkgdir}/usr/bin
  cat<<EOF > ${pkgdir}/usr/bin/lime_html
#!/usr/bin/bash

cd $GOPATH/src/lime/frontend/html
go run main.go
EOF

  cat<<EOF > ${pkgdir}/usr/bin/lime_qt5
#!/usr/bin/bash

cd $GOPATH/src/lime/frontend/qt5
go run main.go
EOF

  chmod a+x ${pkgdir}/usr/bin/*
  ln -s "$pkgdir/$GOPATH/src/lime/frontend/termbox/termbox" ${pkgdir}/usr/bin/lime_termbox
}
