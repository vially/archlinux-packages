# Contributor: Valentin-Costel Haloiu <vially.ichb+aur@gmail.com>

pkgname=go-qml-git
pkgver=20140112
pkgrel=1
pkgdesc="QML support for the Go language"
arch=('i686' 'x86_64')
url="https://github.com/niemeyer/qml"
license=(LGPLv3)
depends=('go' 'qt5-base' 'qt5-declarative')
makedepends=('git' 'bzr')
options=('!strip' '!emptydirs')
source=('bridge.patch')
md5sums=('40d5bb7afb28da2f50855afec5cf1748')
_gourl=github.com/niemeyer/qml

build() {
  #GOPATH="$srcdir" go get -fix -v -x ${_gourl}/...
  export GOPATH="$srcdir"
  go get -d ${_gourl}/...

  # Patch qt headers location
  pushd $srcdir/src/github.com/niemeyer/qml
  patch bridge.go < "$srcdir/bridge.patch"
  popd

  go install ${_gourl}/...
}

#check() {
#  source /etc/profile.d/go.sh
#  GOPATH="$srcdir" go get launchpad.net/gocheck
#  GOPATH="$GOPATH:$srcdir" go test -v -x ${_gourl}/...
#}

package() {
  source /etc/profile.d/go.sh
  export GOPATH="$GOROOT/site"
  mkdir -p "$pkgdir/usr/bin"
  for f in "$srcdir/bin/"*; do
    demo_name=`basename $f`
    install -p -m755 $f "$pkgdir/usr/bin/qml_go_demo_$demo_name"
  done
  

  mkdir -p "$pkgdir/$GOPATH"
  cp -Rv --preserve=timestamps "$srcdir/"{src,pkg} "$pkgdir/$GOPATH"

  # Package license (if available)
  for f in LICENSE COPYING LICENSE.* COPYING.*; do
    if [ -e "$srcdir/src/$_gourl/$f" ]; then
      install -Dm644 "$srcdir/src/$_gourl/$f" \
        "$pkgdir/usr/share/licenses/$pkgname/$f"
    fi
  done
}
